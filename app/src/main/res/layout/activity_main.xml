<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">

    <ImageView
        android:layout_width="@dimen/android_layout_margin"
        android:layout_height="@dimen/android_layout_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/android_layout_margin"
        android:contentDescription="@string/content_description"
        android:src="@drawable/news_app" />

    <TextView
        android:layout_width="@dimen/text_height"
        android:layout_height="@dimen/text_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/home_image_height"
        android:text="@string/app_short_name"
        android:textColor="@color/background_text__color"
        android:textSize="@dimen/text_size" />
</RelativeLayout>